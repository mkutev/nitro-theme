{% doc %}
  @prompt
    newsletter signup popup with image and able to customize colors.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-newsletter-popup-{{ ai_gen_id }} {
    display: block;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }

  .ai-newsletter-popup-{{ ai_gen_id }}.active {
    opacity: 1;
    visibility: visible;
  }

  .ai-newsletter-popup-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
  }

  .ai-newsletter-popup-container-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 90%;
    max-width: {{ block.settings.popup_max_width }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
  }

  .ai-newsletter-popup-content-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr 1fr;
    min-height: 400px;
  }

  .ai-newsletter-popup-image-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
  }

  .ai-newsletter-popup-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-newsletter-popup-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-newsletter-popup-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-newsletter-popup-form-wrapper-{{ ai_gen_id }} {
    padding: 40px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;
  }

  .ai-newsletter-popup-close-{{ ai_gen_id }} {
    position: absolute;
    top: 15px;
    right: 15px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 5px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
    transition: opacity 0.2s ease;
  }

  .ai-newsletter-popup-close-{{ ai_gen_id }}:hover {
    opacity: 1;
  }

  .ai-newsletter-popup-heading-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 10px;
    line-height: 1.2;
  }

  .ai-newsletter-popup-subtext-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.subtext_size }}px;
    margin: 0 0 25px;
    opacity: 0.9;
  }

  .ai-newsletter-popup-form-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .ai-newsletter-popup-input-{{ ai_gen_id }} {
    width: 100%;
    padding: 14px 16px;
    border: 1px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    font-size: 15px;
    background-color: {{ block.settings.input_background_color }};
    color: {{ block.settings.input_text_color }};
  }

  .ai-newsletter-popup-input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.input_text_color }};
    opacity: 0.6;
  }

  .ai-newsletter-popup-button-{{ ai_gen_id }} {
    width: 100%;
    padding: 14px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .ai-newsletter-popup-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-newsletter-popup-success-{{ ai_gen_id }} {
    color: {{ block.settings.success_color }};
    margin-top: 10px;
    font-size: 14px;
  }

  .ai-newsletter-popup-error-{{ ai_gen_id }} {
    color: {{ block.settings.error_color }};
    margin-top: 10px;
    font-size: 14px;
  }

  @media screen and (max-width: 749px) {
    .ai-newsletter-popup-content-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      min-height: auto;
    }

    .ai-newsletter-popup-image-{{ ai_gen_id }} {
      min-height: 200px;
    }

    .ai-newsletter-popup-form-wrapper-{{ ai_gen_id }} {
      padding: 30px 20px;
    }

    .ai-newsletter-popup-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-newsletter-popup-subtext-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtext_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<newsletter-popup-{{ ai_gen_id }}
  class="ai-newsletter-popup-{{ ai_gen_id }}"
  data-delay="{{ block.settings.popup_delay }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-newsletter-popup-overlay-{{ ai_gen_id }}"></div>
  <div class="ai-newsletter-popup-container-{{ ai_gen_id }}">
    <div class="ai-newsletter-popup-content-{{ ai_gen_id }}">
      <div class="ai-newsletter-popup-image-{{ ai_gen_id }}">
        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | image_url: width: 800 }}"
            alt="{{ block.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
          >
        {% else %}
          <div class="ai-newsletter-popup-image-placeholder-{{ ai_gen_id }}">
            {{ 'image' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>

      <div class="ai-newsletter-popup-form-wrapper-{{ ai_gen_id }}">
        <button
          class="ai-newsletter-popup-close-{{ ai_gen_id }}"
          aria-label="Close popup"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <line x1="18" y1="6" x2="6" y2="18"></line>
            <line x1="6" y1="6" x2="18" y2="18"></line>
          </svg>
        </button>

        {%- if block.settings.heading != blank -%}
          <h2 class="ai-newsletter-popup-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {%- endif -%}

        {%- if block.settings.subtext != blank -%}
          <div class="ai-newsletter-popup-subtext-{{ ai_gen_id }}">{{ block.settings.subtext }}</div>
        {%- endif -%}

        {%- form 'customer', class: 'ai-newsletter-popup-form-' | append: ai_gen_id -%}
          <input type="hidden" name="contact[tags]" value="newsletter">
          
          <input
            type="email"
            name="contact[email]"
            class="ai-newsletter-popup-input-{{ ai_gen_id }}"
            value="{{ form.email }}"
            aria-required="true"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            {% if form.errors %}
              aria-invalid="true"
              aria-describedby="ai-newsletter-popup-error-{{ ai_gen_id }}"
            {% endif %}
            {% if form.posted_successfully? %}
              aria-describedby="ai-newsletter-popup-success-{{ ai_gen_id }}"
            {% endif %}
            placeholder="{{ block.settings.email_placeholder }}"
            required
          >

          <button
            type="submit"
            class="ai-newsletter-popup-button-{{ ai_gen_id }}"
          >
            {{ block.settings.button_text }}
          </button>

          {%- if form.errors -%}
            <div
              id="ai-newsletter-popup-error-{{ ai_gen_id }}"
              class="ai-newsletter-popup-error-{{ ai_gen_id }}"
            >
              <span>{{ form.errors.messages.email }}</span>
            </div>
          {%- endif -%}

          {%- if form.posted_successfully? -%}
            <div
              id="ai-newsletter-popup-success-{{ ai_gen_id }}"
              class="ai-newsletter-popup-success-{{ ai_gen_id }}"
            >
              <span>{{ block.settings.success_message }}</span>
            </div>
          {%- endif -%}
        {%- endform -%}
      </div>
    </div>
  </div>
</newsletter-popup-{{ ai_gen_id }}>

<script>
  (function() {
    class NewsletterPopup{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.delay = parseInt(this.dataset.delay) * 1000;
        this.closeButton = this.querySelector('.ai-newsletter-popup-close-{{ ai_gen_id }}');
        this.overlay = this.querySelector('.ai-newsletter-popup-overlay-{{ ai_gen_id }}');
        this.storageKey = 'newsletter-popup-{{ ai_gen_id }}-closed';
      }

      connectedCallback() {
        this.setupEventListeners();
        this.checkAndShowPopup();
      }

      setupEventListeners() {
        this.closeButton.addEventListener('click', () => this.closePopup());
        this.overlay.addEventListener('click', () => this.closePopup());
      }

      checkAndShowPopup() {
        const wasClosed = sessionStorage.getItem(this.storageKey);
        
        if (!wasClosed) {
          setTimeout(() => {
            this.showPopup();
          }, this.delay);
        }
      }

      showPopup() {
        this.classList.add('active');
        document.body.style.overflow = 'hidden';
      }

      closePopup() {
        this.classList.remove('active');
        document.body.style.overflow = '';
        sessionStorage.setItem(this.storageKey, 'true');
      }
    }

    customElements.define('newsletter-popup-{{ ai_gen_id }}', NewsletterPopup{{ ai_gen_id }});
  })();
</script>

