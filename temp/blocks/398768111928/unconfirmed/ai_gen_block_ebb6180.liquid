{% doc %}
  @prompt
    Email signup popup to subscribe visitors to our newsletter list. Add image and customizable colors. Use best practices for signup popup., Please add:
    Triggers Options: scroll triggers, exit-intent (pops when users try to leave).
    Targeting Options: Show popup to new visitors, returning customers.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-newsletter-popup-{{ ai_gen_id }} {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 9999;
    align-items: center;
    justify-content: center;
  }

  .ai-newsletter-popup-{{ ai_gen_id }}.active {
    display: flex;
  }

  .ai-newsletter-popup-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
  }

  .ai-newsletter-popup-content-{{ ai_gen_id }} {
    position: relative;
    background-color: {{ block.settings.background_color }};
    max-width: {{ block.settings.popup_width }}px;
    width: 90%;
    max-height: 90vh;
    overflow-y: auto;
    border-radius: {{ block.settings.border_radius }}px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.2);
    z-index: 1;
  }

  .ai-newsletter-popup-inner-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 1fr;
  }

  @media screen and (min-width: 750px) {
    .ai-newsletter-popup-inner-{{ ai_gen_id }} {
      {% if block.settings.image_position == 'left' %}
        grid-template-columns: 1fr 1fr;
      {% elsif block.settings.image_position == 'right' %}
        grid-template-columns: 1fr 1fr;
      {% endif %}
    }
  }

  .ai-newsletter-popup-image-wrapper-{{ ai_gen_id }} {
    {% if block.settings.image_position == 'left' %}
      order: 1;
    {% elsif block.settings.image_position == 'right' %}
      order: 2;
    {% elsif block.settings.image_position == 'top' %}
      order: 1;
    {% endif %}
    position: relative;
    overflow: hidden;
    {% if block.settings.image_position == 'left' or block.settings.image_position == 'right' %}
      border-radius: {{ block.settings.border_radius }}px 0 0 {{ block.settings.border_radius }}px;
    {% elsif block.settings.image_position == 'top' %}
      border-radius: {{ block.settings.border_radius }}px {{ block.settings.border_radius }}px 0 0;
    {% endif %}
  }

  {% if block.settings.image_position == 'right' %}
    .ai-newsletter-popup-image-wrapper-{{ ai_gen_id }} {
      border-radius: 0 {{ block.settings.border_radius }}px {{ block.settings.border_radius }}px 0;
    }
  {% endif %}

  .ai-newsletter-popup-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    min-height: 250px;
  }

  .ai-newsletter-popup-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    min-height: 250px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-newsletter-popup-image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-newsletter-popup-form-wrapper-{{ ai_gen_id }} {
    {% if block.settings.image_position == 'left' %}
      order: 2;
    {% elsif block.settings.image_position == 'right' %}
      order: 1;
    {% elsif block.settings.image_position == 'top' %}
      order: 2;
    {% endif %}
    padding: 40px;
    color: {{ block.settings.text_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-newsletter-popup-form-wrapper-{{ ai_gen_id }} {
      padding: 30px 20px;
    }
  }

  .ai-newsletter-popup-close-{{ ai_gen_id }} {
    position: absolute;
    top: 15px;
    right: 15px;
    background: {{ block.settings.close_button_color }};
    border: none;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
    transition: transform 0.2s ease;
  }

  .ai-newsletter-popup-close-{{ ai_gen_id }}:hover {
    transform: scale(1.1);
  }

  .ai-newsletter-popup-close-{{ ai_gen_id }} svg {
    width: 16px;
    height: 16px;
    stroke: {{ block.settings.close_button_icon_color }};
  }

  .ai-newsletter-popup-heading-{{ ai_gen_id }} {
    margin: 0 0 12px;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.text_color }};
  }

  .ai-newsletter-popup-text-{{ ai_gen_id }} {
    margin: 0 0 24px;
    font-size: {{ block.settings.text_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.5;
  }

  .ai-newsletter-popup-form-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .ai-newsletter-popup-input-{{ ai_gen_id }} {
    padding: 14px 16px;
    border: 1px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    font-size: 15px;
    background-color: {{ block.settings.input_background_color }};
    color: {{ block.settings.input_text_color }};
  }

  .ai-newsletter-popup-input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.input_text_color }};
    opacity: 0.6;
  }

  .ai-newsletter-popup-button-{{ ai_gen_id }} {
    padding: 14px 24px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .ai-newsletter-popup-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-newsletter-popup-success-{{ ai_gen_id }} {
    color: {{ block.settings.success_color }};
    margin-top: 12px;
    font-size: 14px;
  }

  .ai-newsletter-popup-error-{{ ai_gen_id }} {
    color: {{ block.settings.error_color }};
    margin-top: 12px;
    font-size: 14px;
  }

  .ai-newsletter-popup-disclaimer-{{ ai_gen_id }} {
    margin-top: 16px;
    font-size: 12px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
    line-height: 1.4;
  }
{% endstyle %}

<newsletter-popup-{{ ai_gen_id }}
  class="ai-newsletter-popup-{{ ai_gen_id }}"
  data-delay="{{ block.settings.delay_seconds }}"
  data-frequency="{{ block.settings.show_frequency }}"
  data-trigger="{{ block.settings.trigger_type }}"
  data-scroll-percent="{{ block.settings.scroll_percentage }}"
  data-visitor-type="{{ block.settings.visitor_type }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-newsletter-popup-overlay-{{ ai_gen_id }}"></div>
  <div class="ai-newsletter-popup-content-{{ ai_gen_id }}">
    <button
      class="ai-newsletter-popup-close-{{ ai_gen_id }}"
      aria-label="Close popup"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>

    <div class="ai-newsletter-popup-inner-{{ ai_gen_id }}">
      <div class="ai-newsletter-popup-image-wrapper-{{ ai_gen_id }}">
        {% if block.settings.image %}
          <img
            src="{{ block.settings.image | image_url: width: 800 }}"
            alt="{{ block.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
            class="ai-newsletter-popup-image-{{ ai_gen_id }}"
          >
        {% else %}
          <div class="ai-newsletter-popup-image-placeholder-{{ ai_gen_id }}">
            {{ 'lifestyle-1' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>

      <div class="ai-newsletter-popup-form-wrapper-{{ ai_gen_id }}">
        {%- if block.settings.heading != blank -%}
          <h2 class="ai-newsletter-popup-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {%- endif -%}

        {%- if block.settings.text != blank -%}
          <div class="ai-newsletter-popup-text-{{ ai_gen_id }}">{{ block.settings.text }}</div>
        {%- endif -%}

        {%- form 'customer', class: 'ai-newsletter-popup-form-{{ ai_gen_id }}' -%}
          <input type="hidden" name="contact[tags]" value="newsletter">
          
          <input
            type="email"
            name="contact[email]"
            class="ai-newsletter-popup-input-{{ ai_gen_id }}"
            value="{{ form.email }}"
            aria-required="true"
            autocorrect="off"
            autocapitalize="off"
            autocomplete="email"
            {% if form.errors %}
              aria-invalid="true"
              aria-describedby="ai-newsletter-popup-error-{{ ai_gen_id }}"
            {% endif %}
            {% if form.posted_successfully? %}
              aria-describedby="ai-newsletter-popup-success-{{ ai_gen_id }}"
            {% endif %}
            placeholder="{{ block.settings.email_placeholder }}"
            required
          >

          <button
            type="submit"
            class="ai-newsletter-popup-button-{{ ai_gen_id }}"
          >
            {{ block.settings.button_text }}
          </button>

          {%- if form.errors -%}
            <div
              id="ai-newsletter-popup-error-{{ ai_gen_id }}"
              class="ai-newsletter-popup-error-{{ ai_gen_id }}"
            >
              <span>{{ form.errors.messages.email }}</span>
            </div>
          {%- endif -%}

          {%- if form.posted_successfully? -%}
            <div
              id="ai-newsletter-popup-success-{{ ai_gen_id }}"
              class="ai-newsletter-popup-success-{{ ai_gen_id }}"
            >
              <span>{{ block.settings.success_message }}</span>
            </div>
          {%- endif -%}
        {%- endform -%}

        {%- if block.settings.disclaimer != blank -%}
          <div class="ai-newsletter-popup-disclaimer-{{ ai_gen_id }}">{{ block.settings.disclaimer }}</div>
        {%- endif -%}
      </div>
    </div>
  </div>
</newsletter-popup-{{ ai_gen_id }}>

<script>
  (function() {
    class NewsletterPopup{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.delay = parseInt(this.dataset.delay) * 1000;
        this.frequency = this.dataset.frequency;
        this.trigger = this.dataset.trigger;
        this.scrollPercent = parseInt(this.dataset.scrollPercent);
        this.visitorType = this.dataset.visitorType;
        this.cookieName = 'newsletter_popup_{{ ai_gen_id }}_closed';
        this.visitorCookieName = 'newsletter_popup_{{ ai_gen_id }}_visitor';
        this.closeButton = this.querySelector('.ai-newsletter-popup-close-{{ ai_gen_id }}');
        this.overlay = this.querySelector('.ai-newsletter-popup-overlay-{{ ai_gen_id }}');
        this.form = this.querySelector('.ai-newsletter-popup-form-{{ ai_gen_id }}');
        this.hasShown = false;
        this.exitIntentTriggered = false;
      }

      connectedCallback() {
        if (!this.shouldShowBasedOnVisitorType()) {
          return;
        }

        this.markVisitor();

        if (!this.shouldShowPopup()) {
          return;
        }

        if (this.trigger === 'time') {
          setTimeout(() => {
            this.showPopup();
          }, this.delay);
        } else if (this.trigger === 'scroll') {
          this.setupScrollTrigger();
        } else if (this.trigger === 'exit_intent') {
          this.setupExitIntentTrigger();
        }

        this.closeButton.addEventListener('click', () => this.closePopup());
        this.overlay.addEventListener('click', () => this.closePopup());

        if (this.form) {
          this.form.addEventListener('submit', () => {
            setTimeout(() => {
              this.closePopup();
            }, 3000);
          });
        }

        document.addEventListener('keydown', (e) => {
          if (e.key === 'Escape' && this.classList.contains('active')) {
            this.closePopup();
          }
        });
      }

      shouldShowBasedOnVisitorType() {
        if (this.visitorType === 'all') {
          return true;
        }

        const isReturning = this.getCookie(this.visitorCookieName);

        if (this.visitorType === 'new' && isReturning) {
          return false;
        }

        if (this.visitorType === 'returning' && !isReturning) {
          return false;
        }

        return true;
      }

      markVisitor() {
        if (!this.getCookie(this.visitorCookieName)) {
          this.setCookie(this.visitorCookieName, 'true', 365);
        }
      }

      setupScrollTrigger() {
        const handleScroll = () => {
          if (this.hasShown) {
            return;
          }

          const scrollTop = window.pageYOffset || document.documentElement.scrollTop;
          const docHeight = document.documentElement.scrollHeight - document.documentElement.clientHeight;
          const scrollPercentage = (scrollTop / docHeight) * 100;

          if (scrollPercentage >= this.scrollPercent) {
            this.showPopup();
            window.removeEventListener('scroll', handleScroll);
          }
        };

        window.addEventListener('scroll', handleScroll);
      }

      setupExitIntentTrigger() {
        const handleMouseLeave = (e) => {
          if (this.hasShown || this.exitIntentTriggered) {
            return;
          }

          if (e.clientY <= 0 && e.relatedTarget === null) {
            this.exitIntentTriggered = true;
            this.showPopup();
          }
        };

        document.addEventListener('mouseout', handleMouseLeave);
      }

      shouldShowPopup() {
        const cookie = this.getCookie(this.cookieName);
        
        if (this.frequency === 'once' && cookie) {
          return false;
        }

        if (this.frequency === 'session' && sessionStorage.getItem(this.cookieName)) {
          return false;
        }

        if (this.frequency === 'daily' && cookie) {
          const lastClosed = parseInt(cookie);
          const oneDayInMs = 24 * 60 * 60 * 1000;
          if (Date.now() - lastClosed < oneDayInMs) {
            return false;
          }
        }

        return true;
      }

      showPopup() {
        if (this.hasShown) {
          return;
        }

        this.hasShown = true;
        this.classList.add('active');
        document.body.style.overflow = 'hidden';
      }

      closePopup() {
        this.classList.remove('active');
        document.body.style.overflow = '';

        if (this.frequency === 'once') {
          this.setCookie(this.cookieName, Date.now(), 365);
        } else if (this.frequency === 'session') {
          sessionStorage.setItem(this.cookieName, 'true');
        } else if (this.frequency === 'daily') {
          this.setCookie(this.cookieName, Date.now(), 1);
        }
      }

      getCookie(name) {
        const value = `; ${document.cookie}`;
        const parts = value.split(`; ${name}=`);
        if (parts.length === 2) return parts.pop().split(';').shift();
      }

      setCookie(name, value, days) {
        const expires = new Date();
        expires.setTime(expires.getTime() + days * 24 * 60 * 60 * 1000);
        document.cookie = `${name}=${value};expires=${expires.toUTCString()};path=/`;
      }
    }

    customElements.define('newsletter-popup-{{ ai_gen_id }}', NewsletterPopup{{ ai_gen_id }});
  })();
</script>

