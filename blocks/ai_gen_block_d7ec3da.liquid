<black-friday-offers-{{ ai_gen_id }} class="ai-bf-offers-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-bf-offers-container-{{ ai_gen_id }}">
    <div class="ai-bf-offers-header-{{ ai_gen_id }}">
      {% if block.settings.show_badge %}
        <div class="ai-bf-offers-badge-{{ ai_gen_id }}">{{ block.settings.badge_text }}</div>
      {% endif %}
      
      {% if block.settings.title != blank %}
        <h2 class="ai-bf-offers-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
      {% endif %}
      
      {% if block.settings.subtitle != blank %}
        <div class="ai-bf-offers-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</div>
      {% endif %}

      {% if block.settings.show_countdown %}
        <div class="ai-bf-offers-timer-{{ ai_gen_id }}" data-countdown-end="{{ block.settings.countdown_end }}">
          <div class="ai-bf-offers-timer-box-{{ ai_gen_id }}">
            <span class="ai-bf-offers-timer-number-{{ ai_gen_id }}" data-days>00</span>
            <span class="ai-bf-offers-timer-label-{{ ai_gen_id }}">Days</span>
          </div>
          <div class="ai-bf-offers-timer-box-{{ ai_gen_id }}">
            <span class="ai-bf-offers-timer-number-{{ ai_gen_id }}" data-hours>00</span>
            <span class="ai-bf-offers-timer-label-{{ ai_gen_id }}">Hours</span>
          </div>
          <div class="ai-bf-offers-timer-box-{{ ai_gen_id }}">
            <span class="ai-bf-offers-timer-number-{{ ai_gen_id }}" data-minutes>00</span>
            <span class="ai-bf-offers-timer-label-{{ ai_gen_id }}">Minutes</span>
          </div>
          <div class="ai-bf-offers-timer-box-{{ ai_gen_id }}">
            <span class="ai-bf-offers-timer-number-{{ ai_gen_id }}" data-seconds>00</span>
            <span class="ai-bf-offers-timer-label-{{ ai_gen_id }}">Seconds</span>
          </div>
        </div>
      {% endif %}
    </div>

    <div class="ai-bf-offers-grid-{{ ai_gen_id }}">
      {% for i in (1..3) %}
        {% liquid
          assign offer_enabled_key = 'offer_' | append: i | append: '_enabled'
          assign offer_image_key = 'offer_' | append: i | append: '_image'
          assign offer_title_key = 'offer_' | append: i | append: '_title'
          assign offer_description_key = 'offer_' | append: i | append: '_description'
          assign offer_discount_key = 'offer_' | append: i | append: '_discount'
          assign offer_original_price_key = 'offer_' | append: i | append: '_original_price'
          assign offer_sale_price_key = 'offer_' | append: i | append: '_sale_price'
          assign offer_link_key = 'offer_' | append: i | append: '_link'

          assign offer_enabled = block.settings[offer_enabled_key]
          assign offer_image = block.settings[offer_image_key]
          assign offer_title = block.settings[offer_title_key]
          assign offer_description = block.settings[offer_description_key]
          assign offer_discount = block.settings[offer_discount_key]
          assign offer_original_price = block.settings[offer_original_price_key]
          assign offer_sale_price = block.settings[offer_sale_price_key]
          assign offer_link = block.settings[offer_link_key]
        %}

        {% if offer_enabled %}
          <div class="ai-bf-offers-card-{{ ai_gen_id }}">
            {% if offer_discount != blank %}
              <div class="ai-bf-offers-card-discount-{{ ai_gen_id }}">{{ offer_discount }}</div>
            {% endif %}

            {% if offer_image %}
              <img
                src="{{ offer_image | image_url: width: 600 }}"
                alt="{{ offer_image.alt | escape }}"
                class="ai-bf-offers-card-image-{{ ai_gen_id }}"
                loading="lazy"
                width="600"
                height="400"
              >
            {% else %}
              <div class="ai-bf-offers-card-image-placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}

            {% if offer_title != blank %}
              <h3 class="ai-bf-offers-card-title-{{ ai_gen_id }}">{{ offer_title }}</h3>
            {% endif %}

            {% if offer_description != blank %}
              <div class="ai-bf-offers-card-description-{{ ai_gen_id }}">{{ offer_description }}</div>
            {% endif %}

            {% if offer_original_price != blank or offer_sale_price != blank %}
              <div class="ai-bf-offers-card-price-{{ ai_gen_id }}">
                {% if offer_original_price != blank %}
                  <span class="ai-bf-offers-card-price-original-{{ ai_gen_id }}">{{ offer_original_price }}</span>
                {% endif %}
                {% if offer_sale_price != blank %}
                  <span class="ai-bf-offers-card-price-sale-{{ ai_gen_id }}">{{ offer_sale_price }}</span>
                {% endif %}
              </div>
            {% endif %}

            {% if offer_link != blank %}
              <a href="{{ offer_link }}" class="ai-bf-offers-card-button-{{ ai_gen_id }}">
                {{ block.settings.card_button_text }}
              </a>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>

    {% if block.settings.show_cta and block.settings.cta_link != blank %}
      <div class="ai-bf-offers-cta-{{ ai_gen_id }}">
        <a href="{{ block.settings.cta_link }}" class="ai-bf-offers-cta-button-{{ ai_gen_id }}">
          {{ block.settings.cta_button_text }}
        </a>
      </div>
    {% endif %}
  </div>
</black-friday-offers-{{ ai_gen_id }}>

<script>
  (function() {
    class BlackFridayOffers{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.countdownTimer = this.querySelector('[data-countdown-end]');
      }

      connectedCallback() {
        if (this.countdownTimer) {
          this.initCountdown();
        }
      }

      initCountdown() {
        const endDate = this.countdownTimer.getAttribute('data-countdown-end');
        if (!endDate) return;

        const countdownEnd = new Date(endDate).getTime();
        const daysEl = this.countdownTimer.querySelector('[data-days]');
        const hoursEl = this.countdownTimer.querySelector('[data-hours]');
        const minutesEl = this.countdownTimer.querySelector('[data-minutes]');
        const secondsEl = this.countdownTimer.querySelector('[data-seconds]');

        const updateCountdown = () => {
          const now = new Date().getTime();
          const distance = countdownEnd - now;

          if (distance < 0) {
            daysEl.textContent = '00';
            hoursEl.textContent = '00';
            minutesEl.textContent = '00';
            secondsEl.textContent = '00';
            clearInterval(this.interval);
            return;
          }

          const days = Math.floor(distance / (1000 * 60 * 60 * 24));
          const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
          const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
          const seconds = Math.floor((distance % (1000 * 60)) / 1000);

          daysEl.textContent = String(days).padStart(2, '0');
          hoursEl.textContent = String(hours).padStart(2, '0');
          minutesEl.textContent = String(minutes).padStart(2, '0');
          secondsEl.textContent = String(seconds).padStart(2, '0');
        };

        updateCountdown();
        this.interval = setInterval(updateCountdown, 1000);
      }

      disconnectedCallback() {
        if (this.interval) {
          clearInterval(this.interval);
        }
      }
    }

    customElements.define('black-friday-offers-{{ ai_gen_id }}', BlackFridayOffers{{ ai_gen_id }});
  })();
</script>

