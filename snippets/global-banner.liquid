{% comment %}
  Custom snippet for global sale banners to be shown on collection and product pages.
{% endcomment %}

{% style %}
  .global-banner__container .banner {
    display: block;
    border-radius: 10px;
    overflow: hidden;
  }

  .global-banner__container .banner img {
    max-width: 100%;
  }
{% endstyle %}



<div class="global-banner__container page-width">
  <picture class="banner">
    <source srcset="{{ 'newyear2024-globalbanner-compressed.jpg' | file_url }}" media="(min-width: 1200px)">
    <img
      src="{{ 'newyear2024-globalbanner-compressed.jpg' | file_url }}"
      alt="Fall sale on best electric bikes Canada"
      style="display: block;"
    >
  </picture>
</div>